{
  "name": "@erold/mcp-server",
  "version": "0.1.4",
  "description": "MCP Server for Erold - AI-native project management",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "erold-mcp": "dist/bin/erold-mcp.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup src/index.ts src/bin/erold-mcp.ts --format esm --dts --clean",
    "start": "node dist/index.js",
    "inspect": "npx @modelcontextprotocol/inspector tsx src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "erold",
    "project-management",
    "ai",
    "claude",
    "anthropic"
  ],
  "author": "Erold",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/erold-dev/mcp-server"
  },
  "homepage": "https://erold.dev",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "fastmcp": "^3.0.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.3.0",
    "@types/node": "^22.0.0",
    "eslint": "^9.0.0",
    "tsup": "^8.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.7.0",
    "vitest": "^4.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
